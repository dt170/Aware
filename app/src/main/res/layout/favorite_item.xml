<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_margin="3dp"
        card_view:cardElevation="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="2dp"
                    android:id="@+id/imageViewFavoritePlace"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/map"
                    tools:ignore="ContentDescription" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewFavoriteName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/textViewFavoriteAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:id="@+id/imageViewFravoriteDrive"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:padding="5dp"
                            android:src="@drawable/ic_drive_eta_black_48dp"
                            tools:ignore="ContentDescription" />
                        <ImageView
                            android:layout_marginTop="2dp"
                            android:id="@+id/imageViewFavoriteWebPage"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:padding="5dp"
                            android:src="@drawable/ic_language_black_48dp"
                            tools:ignore="ContentDescription" />
                        <ImageView
                            android:layout_marginTop="2dp"
                            android:id="@+id/imageViewFavoritePhone"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:padding="5dp"
                            android:src="@drawable/ic_phone_black_48dp"
                            tools:ignore="ContentDescription" />
                        <ImageView
                            android:layout_marginTop="2dp"
                            android:id="@+id/imageViewFaviteShare"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:padding="5dp"
                            android:src="@drawable/ic_share_black_48dp"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_marginTop="2dp"
                    android:id="@+id/imageViewFavoriteDelete"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    android:src="@drawable/ic_delete_black_48dp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
